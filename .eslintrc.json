{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:import/recommended",
    "prettier",
    "airbnb"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    //"react/jsx-filename-extension": [0], // this first rule we need fix before enebled rules line 30
    //"import/extensions": "off", // this second rule we need fix before enebled rules line down (30)
    //"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }], // Enebled when will fix rules 29 and 28 line up!!!!
    //"max-len": "off", // we need fix all disebled rules from here and below... for line STOP
    //"import/prefer-default-export": "off",
    "camelcase": "off",
    "react/jsx-one-expression-per-line": "off",
    "operator-linebreak": ["error", "after", { "overrides": { "?": "before", ":": "before" } }],
//    "operator-linebreak": ["error", "after", { "overrides": { "||": "before" } }],
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "react/jsx-boolean-value": "off",
    "object-curly-newline": "off",
    "default-param-last": 0,
    "no-unused-vars": "off",
    "no-return-assign": "off",
    "react/prop-types": "off", // I think it will be fixxed when add TypeScript in project
    "react/jsx-no-useless-fragment": "off",
    "array-callback-return": "off",
    "no-underscore-dangle": "off",
    "no-console": "off",
    "import/no-duplicates": "off",
    "react/jsx-indent-props": "off",
    "react-hooks/exhaustive-deps": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/control-has-associated-label": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/media-has-caption": "off",
    "jsx-a11y/click-events-have-key-events": "off", // this is last rule that we need fix! it's line STOP !!!!!
    "react/jsx-no-bind": "off",
    "eqeqeq": "off",
    "react/react-in-jsx-scope": "off",
    // "react/button-has-type": "off",
    "no-param-reassign": 0,// leave it off. Prohibits mutating function arguments. This is necessary in some places of the code
    "no-shadow": "off", //it is better to leave it turned off. Prohibits creating not only variables with the same names, but also arguments for calling a function, as well as nested array method items
    "no-unused-expressions": "off", // leave it off, prohibits the appearance of simple expressions inside the function
    "import/no-unresolved": "off", // пути к получению модулей, вернуться позже, лечение проблемное
    "no-nested-ternary": "off", // https://eslint.org/docs/latest/rules/no-nested-ternary , I think it's better to leave it off
    // "react/no-unknown-property": "off",
    // "react/destructuring-assignment": "off",
    // "consistent-return": "off",
    // "react/no-array-index-key": "off",
    "func-names": "off", // From here and below is correct rules !!!
    "react/jsx-props-no-spreading": "off",
    "prettier/prettier": "off",
    "arrow-body-style": ["error", "as-needed"], //в работе
    "prefer-arrow-callback": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}
